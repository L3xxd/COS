<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane fx:id="rootPane" prefHeight="1020.0" prefWidth="1720.0" styleClass="anchor-pane"
            stylesheets="@../../../assets/css/microstyle.css"
            fx:controller="com.l3xxd.cos_alpha.controllers.dashboard.inventario.InventarioController"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <children>

        <!-- Panel lateral de filtros -->
        <VBox layoutX="1404.0" layoutY="32.0" prefWidth="300.0" spacing="15.0" styleClass="sidebar-filters">
            <Label styleClass="label-title" text="Filtros" />
            <TextField fx:id="findByNameTextField" promptText="Buscar por nombre" styleClass="text-field" />
            <ComboBox fx:id="categoriaComboBox" promptText="Tipo" styleClass="combo-box">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="SENCILLO" />
                        <String fx:value="ESPECIAL" />
                    </FXCollections>
                </items>
            </ComboBox>
            <Button fx:id="searchButton" styleClass="button" text="Buscar" />
        </VBox>

        <!-- Tabla central -->
        <TableView fx:id="productosTable" layoutX="33.0" layoutY="27.0" prefHeight="800.0" prefWidth="1350.0" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colId" prefWidth="80.0" styleClass="table-column" text="ID" />
                <TableColumn fx:id="colNombre" prefWidth="200.0" styleClass="table-column" text="NOMBRE" />
                <TableColumn fx:id="colCategoria" prefWidth="150.0" styleClass="table-column" text="TIPO" />
                <TableColumn fx:id="colPrecioCompra" prefWidth="120.0" styleClass="table-column" text="PRECIO COMPRA" />
                <TableColumn fx:id="colPrecioVenta" prefWidth="120.0" styleClass="table-column" text="PRECIO VENTA" />
                <TableColumn fx:id="colStock" prefWidth="100.0" styleClass="table-column" text="STOCK" />
                <TableColumn fx:id="colDescripcion" prefWidth="300.0" styleClass="table-column" text="STATUS" />
                <TableColumn fx:id="colFoto" prefWidth="150.0" styleClass="table-column" text="URL_PHOTO" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- Panel inferior de acciones -->
        <HBox alignment="CENTER" layoutX="37.0" layoutY="855.0" prefHeight="25.0" prefWidth="1345.0" spacing="40.0" styleClass="action-buttons">
            <Button fx:id="addButton" styleClass="button-primary" text="Nuevo Producto" />
            <Button fx:id="editButton" styleClass="button-secondary" text="Editar Producto" />
            <Button fx:id="deleteButton" styleClass="button-danger" text="Eliminar Producto" />
        </HBox>

    </children>
</AnchorPane>
