<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.l3xxd.cos_alpha.controllers.dashboard.empleados.EmpleadoFormController"
            prefWidth="400" prefHeight="420">

    <VBox spacing="12" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

        <Label text="Formulario de Operador" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TextField fx:id="firstNameField" promptText="Nombre" />
        <TextField fx:id="lastNameField" promptText="Apellido" />
        <TextField fx:id="emailField" promptText="Correo electrónico" />
        <TextField fx:id="phoneField" promptText="Teléfono" />
        <PasswordField fx:id="passwordField" promptText="Contraseña" />

        <ComboBox fx:id="rolComboBox" promptText="Rol" prefWidth="200" />

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="saveButton" text="Guardar" onAction="#guardarOperador" />
            <Button fx:id="cancelButton" text="Cancelar" onAction="#cerrarVentana" />
        </HBox>
    </VBox>
</AnchorPane>
