<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="500.0" prefHeight="600.0">

    <children>
        <VBox spacing="12.0" layoutX="30.0" layoutY="30.0" prefWidth="440.0">

            <Label text="Formulario de Producto" />

            <TextField fx:id="nombreField" promptText="Nombre del producto" />

            <ComboBox fx:id="tipoComboBox" promptText="Tipo">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="SENCILLO" />
                        <String fx:value="ESPECIAL" />
                    </FXCollections>
                </items>
            </ComboBox>

            <TextField fx:id="precioCompraField" promptText="Precio de compra" />
            <TextField fx:id="precioVentaField" promptText="Precio de venta" />
            <TextField fx:id="stockField" promptText="Stock disponible" />
            <ComboBox fx:id="estadoComboBox" promptText="Estado">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="ACTIVO" />
                        <String fx:value="INACTIVO" />
                    </FXCollections>
                </items>
            </ComboBox>


            <HBox spacing="10.0">
                <TextField fx:id="urlFotoField" promptText="URL de la foto" prefWidth="300.0" />
                <Button fx:id="cargarFotoButton" text="Cargar"  />
            </HBox>

            <ImageView fx:id="previewImageView" fitWidth="200.0" fitHeight="150.0" preserveRatio="true" />

            <HBox spacing="10.0" alignment="CENTER">
                <Button fx:id="guardarButton" text="Guardar" />
                <Button fx:id="cancelarButton" text="Cancelar"  />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
