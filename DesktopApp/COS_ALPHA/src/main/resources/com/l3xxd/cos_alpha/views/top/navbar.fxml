<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Text?>


<HBox fx:id="paneNavbar" alignment="CENTER_LEFT" prefHeight="37.5" spacing="15" style="-fx-padding: 0 30 0 30;" stylesheets="@../../assets/css/light-mode.css" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.l3xxd.cos_alpha.Controllers.NavbarController">

    <children>
        <!-- Sección izquierda -->
        <HBox alignment="CENTER_LEFT" spacing="8">
            <ImageView>
                <image>
                    <Image url="@../../assets/img/ui/menu.png" />
                </image>
            </ImageView>
            <Text fx:id="menuText" fill="WHITE" styleClass="navbarText" text="Menu" />
        </HBox>

        <!-- Espaciador flexible -->
        <Region fx:id="navbarSpacer" HBox.hgrow="ALWAYS" />

        <!-- Sección derecha -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <ImageView>
                <image>
                    <Image url="@../../assets/img/ui/clock.png" />
                </image>
            </ImageView>
            <Text fx:id="clockText" fill="WHITE" styleClass="navbarText" text="00:00" />

            <ImageView>
                <image>
                    <Image url="@../../assets/img/ui/calendar.png" />
                </image>
            </ImageView>
            <Text fx:id="dateText" fill="WHITE" styleClass="navbarText" text="01/01/2025" />

            <ImageView>
                <image>
                    <Image url="@../../assets/img/ui/user-navbar.png" />
                </image>
            </ImageView>
            <Text fx:id="userprofileText" fill="WHITE" styleClass="navbarText" text="Profile" />
        </HBox>
    </children>
</HBox>
