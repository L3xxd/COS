<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="1020.0" prefWidth="1720.0" styleClass="anchor-pane" stylesheets="@../../../assets/css/microstyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.l3xxd.cos_alpha.controllers.dashboard.pedidos.PedidoController">

    <children>
        <Label layoutX="40.0" layoutY="30.0" styleClass="label-title" text="GestiÃ³n de Pedidos" />

        <TableView fx:id="tblPedidos" layoutX="40.0" layoutY="80.0" prefHeight="800.0" prefWidth="1640.0" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colIdPedido" text="ID Pedido" />
                <TableColumn fx:id="colOperador" text="Operador" />
                <TableColumn fx:id="colFechaSolicitud" text="Fecha Solicitud" />
                <TableColumn fx:id="colFechaLlegada" text="Fecha Llegada" />
                <TableColumn fx:id="colEstado" text="Estado" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>

        <HBox layoutX="40.0" layoutY="900.0" spacing="10" styleClass="action-buttons">
            <children>
                <Button fx:id="btnNuevo" onAction="#abrirFormularioNuevoPedido" styleClass="button button-primary" text="Nuevo Pedido" />
                <Button fx:id="btnEditar" disable="true" onAction="#editarPedido" styleClass="button button-secondary" text="Editar" visible="false" />
                <Button fx:id="btnEliminar" onAction="#eliminarPedido" styleClass="button button-danger" text="Eliminar" />
                <Button fx:id="btnVerDetalle" disable="true" onAction="#verDetallePedido" styleClass="button" text="Ver Detalle" visible="false" />

            </children>
        </HBox>
    </children>
</AnchorPane>
