<?xml version="1.0" encoding="UTF-8"?>

<!-- ────────────────────────────────────────────────────────
 📦 IMPORTACIONES NECESARIAS
───────────────────────────────────────────────────────── -->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<!-- ────────────────────────────────────────────────────────
 👥 VISTA DE GESTIÓN DE EMPLEADOS
───────────────────────────────────────────────────────── -->
<AnchorPane prefHeight="1020.0" prefWidth="1720.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.l3xxd.cos_alpha.controllers.dashboard.EmpleadosController">

    <children>

        <!-- 📋 Tabla de empleados -->
        <AnchorPane layoutX="24.0" layoutY="21.0" prefHeight="703.0" prefWidth="1673.0">
            <children>
                <TableView fx:id="empleados_table"
                           layoutX="197.0" layoutY="118.0"
                           prefHeight="703.0" prefWidth="1673.0"
                           AnchorPane.topAnchor="0.0"
                           AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="0.0">

                    <columns>
                        <TableColumn fx:id="col_id" text="ID" prefWidth="182.0" />
                        <TableColumn fx:id="col_nombre" text="NOMBRE" prefWidth="466.0" />
                        <TableColumn fx:id="col_usuario" text="USUARIO" prefWidth="482.0" />
                        <TableColumn fx:id="col_password" text="PASSWORD" prefWidth="133.0" />
                        <TableColumn fx:id="col_rol" text="ROL" prefWidth="393.0" />
                        <TableColumn fx:id="col_correo" text="CORREO" prefWidth="482.0" />
                    </columns>

                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>

        <!-- 🧾 Etiquetas de campos -->
        <Label layoutX="204.0" layoutY="794.0" text="ID" />
        <Label layoutX="158.0" layoutY="836.0" text="NOMBRE" />
        <Label layoutX="854.0" layoutY="782.0" text="USUARIO" />
        <Label layoutX="846.0" layoutY="827.0" text="PASSWORD" />
        <Label layoutX="195.0" layoutY="919.0" text="CORREO" />
        <Label layoutX="868.0" layoutY="924.0" text="ROL" />

        <!-- ✏️ Campos de entrada -->
        <TextField fx:id="txt_id" layoutX="294.0" layoutY="790.0" />
        <TextField fx:id="txt_nombre" layoutX="292.0" layoutY="843.0" />
        <TextField fx:id="txt_correo" layoutX="290.0" layoutY="915.0" />
        <TextField fx:id="txt_usuario" layoutX="967.0" layoutY="775.0" />
        <TextField fx:id="txt_password" layoutX="966.0" layoutY="822.0" />

        <!-- 🔽 ComboBox para rol -->
        <ComboBox fx:id="combo_rol"
                  layoutX="946.0" layoutY="922.0"
                  prefHeight="25.0" prefWidth="139.0"
                  promptText="Selecciona el rol" />

        <!-- 🧩 Botones de acción -->
        <Button fx:id="btn_agregar" layoutX="1447.0" layoutY="788.0" text="AGREGAR" />
        <Button fx:id="btn_editar" layoutX="1452.0" layoutY="888.0" text="EDITAR" />
        <Button fx:id="btn_eliminar" layoutX="1442.0" layoutY="945.0" text="ELIMINAR" />

    </children>
</AnchorPane>

