<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="1020.0" prefWidth="1720.0" styleClass="anchor-pane" stylesheets="@../../../assets/css/microstyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.l3xxd.cos_alpha.controllers.dashboard.empleados.EmpleadosController">

    <children>

        <!-- 📋 Tabla principal que muestra los operadores registrados -->
        <AnchorPane layoutX="31.0" layoutY="89.0" prefHeight="703.0" prefWidth="1673.0" styleClass="tabla-contenedor">
            <children>
                <TableView fx:id="operadoresTable" layoutX="0.0" layoutY="0.0" prefHeight="703.0" prefWidth="1673.0" styleClass="table-view" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                    <columns>
                        <TableColumn fx:id="colId" prefWidth="100.0" styleClass="table-column" text="ID" />
                        <TableColumn fx:id="colUsername" prefWidth="200.0" styleClass="table-column" text="USUARIO" />
                        <TableColumn fx:id="colRol" prefWidth="150.0" styleClass="table-column" text="ROL" />
                        <TableColumn fx:id="colNombre" prefWidth="200.0" styleClass="table-column" text="NOMBRE" />
                        <TableColumn fx:id="colApellido" prefWidth="200.0" styleClass="table-column" text="APELLIDO" />
                        <TableColumn fx:id="colEmail" prefWidth="250.0" styleClass="table-column" text="CORREO" />
                        <TableColumn fx:id="colTelefono" prefWidth="150.0" styleClass="table-column" text="TELÉFONO" />
                    </columns>

                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>

        <!-- 🟢 Botón para crear un nuevo operador -->
        <Button fx:id="addButton" layoutX="167.0" layoutY="858.0" onAction="#abrirFormularioAgregar" prefHeight="50.0" prefWidth="300.0" styleClass="button" text="NUEVO OPERADOR" />

        <!-- 🟡 Botón para editar el operador seleccionado -->
        <Button fx:id="editButton" layoutX="693.0" layoutY="858.0" onAction="#abrirFormularioEditar" prefHeight="50.0" prefWidth="300.0" styleClass="button" text="EDITAR OPERADOR" />

        <!-- 🔴 Botón para eliminar el operador seleccionado -->
        <Button fx:id="deleteButton" layoutX="1178.0" layoutY="858.0" onAction="#eliminarOperador" prefHeight="50.0" prefWidth="300.0" styleClass="button" text="ELIMINAR OPERADOR" />

        <!-- 🔍 Campo de búsqueda por usuario -->
        <Label layoutX="89.0" layoutY="43.0" styleClass="label" text="USUARIO" />
        <TextField fx:id="findByUserTextField" layoutX="160.0" layoutY="36.0" prefHeight="25.0" prefWidth="360.0" styleClass="text-field" />

        <!-- 🔍 Campo de búsqueda por teléfono -->
        <Label layoutX="553.0" layoutY="42.0" styleClass="label" text="TELÉFONO" />
        <TextField fx:id="findByPhoneTextField" layoutX="646.0" layoutY="36.0" prefHeight="25.0" prefWidth="360.0" styleClass="text-field" />

        <!-- 🔎 Botón para ejecutar búsqueda -->
        <Button fx:id="searchButton" layoutX="1406.0" layoutY="30.0" onAction="#buscarOperadores" prefHeight="36.0" prefWidth="116.0" styleClass="button" text="BUSCAR" />

        <!-- 🔄 Botón para recargar registros -->
        <Button fx:id="refreshButton" layoutX="1568.0" layoutY="29.0" onAction="#cargarOperadores" prefHeight="36.0" prefWidth="116.0" styleClass="button" text="REFRESCAR" />

    </children>
</AnchorPane>
