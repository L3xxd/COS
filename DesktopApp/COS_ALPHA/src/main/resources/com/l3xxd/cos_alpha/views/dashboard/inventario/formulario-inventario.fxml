<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="500.0" prefHeight="600.0"
            styleClass="anchor-pane">

    <VBox spacing="12.0" layoutX="30.0" layoutY="30.0" prefWidth="440.0"
          styleClass="form-container">

        <Label text="Formulario de Producto" styleClass="label-title" />

        <TextField fx:id="nombreField" promptText="Nombre del producto" styleClass="text-field" />

        <ComboBox fx:id="tipoComboBox" promptText="Tipo" styleClass="combo-box">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="SENCILLO" />
                    <String fx:value="ESPECIAL" />
                </FXCollections>
            </items>
        </ComboBox>

        <TextField fx:id="precioCompraField" promptText="Precio de compra" styleClass="text-field" />
        <TextField fx:id="precioVentaField" promptText="Precio de venta" styleClass="text-field" />
        <TextField fx:id="stockField" promptText="Stock disponible" styleClass="text-field" />

        <ComboBox fx:id="estadoComboBox" promptText="Estado" styleClass="combo-box">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="ACTIVO" />
                    <String fx:value="INACTIVO" />
                </FXCollections>
            </items>
        </ComboBox>

        <HBox spacing="10.0" styleClass="photo-url-box">
            <TextField fx:id="urlFotoField" promptText="URL de la foto" prefWidth="300.0" styleClass="text-field" />
            <Button fx:id="cargarFotoButton" text="Cargar" styleClass="button-secondary" />
        </HBox>

        <ImageView fx:id="previewImageView"
                   fitWidth="200.0" fitHeight="150.0"
                   preserveRatio="true"
                   styleClass="image-preview" />

        <HBox spacing="10.0" alignment="CENTER" styleClass="action-buttons">
            <Button fx:id="guardarButton" text="Guardar" styleClass="button-primary" />
            <Button fx:id="cancelarButton" text="Cancelar" styleClass="button-danger" />
        </HBox>

    </VBox>
</AnchorPane>
