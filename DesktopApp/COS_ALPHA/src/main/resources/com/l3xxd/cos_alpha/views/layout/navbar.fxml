<!--                        </image>-->
<!--                    </ImageView>-->
<!--                </graphic>-->
<!--            </Button>-->
            <!-- Bloque: Botón con ícono y texto bien distribuidos -->
            <Button fx:id="logoutButton"
                    text="Cerrar sesión"
                    mnemonicParsing="false"
                    style="-fx-content-display: LEFT; -fx-graphic-text-gap: 10; -fx-padding: 2 10 2 10;">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0">
                        <image>
                            <Image url="@../../assets/img/ui/turn-off.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>



        </HBox>
    </children>
</HBox>
