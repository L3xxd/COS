<?xml version="1.0" encoding="UTF-8"?>

<!-- Importaci贸n de controles, layout, 铆conos y texto -->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<!-- Barra superior de navegaci贸n -->
<HBox fx:id="paneNavbar"
      alignment="CENTER_LEFT"
      spacing="15"
      style="-fx-padding: 0 15 0 15;"
      styleClass="navbar-pane"
      stylesheets="@../../assets/css/navbar/navbar.css"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.l3xxd.cos_alpha.controllers.layout.NavbarController"
      prefHeight="37.5"
      prefWidth="Infinity">

    <!--  Secci贸n izquierda: men煤 -->
    <HBox alignment="CENTER_LEFT" spacing="8">
        <FontIcon iconColor="WHITE" iconLiteral="anto-menu" iconSize="20" />
        <Text fx:id="menuText" fill="WHITE" styleClass="navbar-text" text="Menu" />
    </HBox>

    <!--  Espaciador flexible para distribuir contenido -->
    <Region fx:id="navbarSpacer" HBox.hgrow="ALWAYS" />

    <!--  Secci贸n derecha: reloj, perfil y logout -->
    <HBox alignment="CENTER_RIGHT" spacing="10">

        <!--  Reloj y fecha -->
        <HBox alignment="CENTER" spacing="5">
            <FontIcon iconColor="WHITE" iconLiteral="antf-clock-circle" iconSize="20" />
            <Text fx:id="clockText" fill="WHITE" styleClass="navbar-text" text="00:00" />
            <Separator orientation="VERTICAL" />
            <FontIcon iconColor="WHITE" iconLiteral="far-calendar-alt" iconSize="20" />
            <Text fx:id="dateText" fill="WHITE" styleClass="navbar-text" text="01/01/2025" />
        </HBox>

        <Separator orientation="VERTICAL" />

        <!--  Perfil del usuario -->
        <HBox alignment="CENTER" spacing="5">
            <FontIcon iconColor="WHITE" iconLiteral="fas-user" iconSize="20" />
            <Text fx:id="userprofileText" fill="WHITE" styleClass="navbar-text" text="Bienvenido" />
        </HBox>

        <Separator orientation="VERTICAL" />

        <!--  Bot贸n de cierre de sesi贸n -->
        <Button fx:id="logoutButton" mnemonicParsing="false"
                styleClass="button-logout" text="Cerrar sesi贸n">
            <graphic>
                <FontIcon iconColor="WHITE" iconLiteral="fas-power-off" iconSize="20" />
            </graphic>
        </Button>

    </HBox>
</HBox>

