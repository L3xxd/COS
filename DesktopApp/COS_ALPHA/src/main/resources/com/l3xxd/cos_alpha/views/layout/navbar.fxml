<HBox fx:id="paneNavbar" alignment="CENTER_LEFT" prefHeight="37.5" spacing="15" style="-fx-padding: 0 15 0 15;" stylesheets="@../../assets/css/login/light-mode.css" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.l3xxd.cos_alpha.controllers.layout.NavbarController">

    <children>
        <!-- Sección izquierda -->
        <HBox alignment="CENTER_LEFT" spacing="8">
            <ImageView>
                <image>
                    <Image url="@../../assets/img/ui/menu.png" />
                </image>
            </ImageView>
            <Text fx:id="menuText" fill="WHITE" styleClass="navbarText" text="Menu" />
        </HBox>

        <!-- Espaciador flexible -->
        <Region fx:id="navbarSpacer" HBox.hgrow="ALWAYS" />

        <!-- Sección derecha con separadores -->
        <Separator orientation="VERTICAL" />
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <!-- Bloque: Reloj y Fecha -->
            <HBox alignment="CENTER" spacing="5">
                <ImageView>
                    <image>
                        <Image url="@../../assets/img/ui/clock.png" />
                    </image>
                </ImageView>
                <Text fx:id="clockText" fill="WHITE" styleClass="navbarText" text="00:00" />
                <Separator orientation="VERTICAL" />
                <ImageView>
                    <image>
                        <Image url="@../../assets/img/ui/calendar.png" />
                    </image>
                </ImageView>
                <Text fx:id="dateText" fill="WHITE" styleClass="navbarText" text="01/01/2025" />
            </HBox>

            <!-- Separador -->
            <Separator orientation="VERTICAL" />

            <!-- Bloque: Perfil -->
            <HBox alignment="CENTER" spacing="5">
                <ImageView>
                    <image>
                        <Image url="@../../assets/img/ui/user-navbar.png" />
                    </image>
                </ImageView>
                <Text fx:id="userprofileText" fill="WHITE" styleClass="navbarText" text="Profile" />
            </HBox>

            <!-- Separador -->
            <Separator orientation="VERTICAL" />


            <!-- Bloque: Botón con ícono -->
